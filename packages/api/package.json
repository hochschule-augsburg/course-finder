{
  "name": "api",
  "type": "module",
  "version": "0.0.0",
  "files": [
    "dist/",
    "prisma/",
    "pm2.config.cjs"
  ],
  "scripts": {
    "dev": "node --experimental-transform-types --watch src/main.ts | pino-pretty",
    "bundle": "esbuild src/main.ts --bundle --packages=external --format=esm --platform=node --outdir=dist",
    "start": "env NODE_ENV=production TZ=Europe/Berlin node dist/main.js",
    "build": "tsc --noEmit && pnpm run bundle",
    "lint": "eslint --no-warn-ignored src/ prisma/ tests/ --ignore-pattern '**/*.d.ts'",
    "test": "vitest run",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --skip-seed --force && prisma db seed",
    "db:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@prisma/adapter-pg": "^6.8.2",
    "@prisma/client": "^6.8.2",
    "@trpc/server": "^11.1.4",
    "date-fns": "^4.1.0",
    "fastify": "^5.3.3",
    "ldapts": "^8.0.1",
    "lodash-es": "^4.17.21",
    "node-pdftk": "^2.1.3",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.3",
    "pdf.js-extract": "^0.2.1",
    "pg": "^8.16.0",
    "pm2": "^6.0.6",
    "prisma": "^6.8.2",
    "prisma-json-types-generator": "^3.4.2",
    "superjson": "^2.2.2",
    "totp-generator": "^1.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.45"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/lodash-es": "^4.17.12",
    "@types/node-pdftk": "^2.1.9",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.2",
    "esbuild": "^0.25.5",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "prisma": {
    "seed": "node prisma/seed.ts"
  }
}
